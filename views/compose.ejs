<%- include("partials/header") -%>

<form class="compose" id="myForm" action="/compose" method="post">
    <div class="form-group">
    <label for="">Date</label><br>
    <input class="form-control" type="text" name="newPostDate" value="<%= day %>" placeholder="" disabled><br>
  </div>
  <div class="form-group">
    <label for="">Title</label><br>
    <input class="form-control" type="text" name="newTitle" value="" placeholder="Enter new post title" autofocus required><br>
  </div>
  <div class="form-group">
    <label for="">Post</label><br>
    <textarea class="form-control form-control-lg postInput" type="text" name="newPost" value="" placeholder="Enter new post" required ></textarea><br>
  </div>

  <button class="btn btn-outline-primary" type="submit" name="button">Publish</button>
</form>


<%- include("partials/footer") -%>
